{% extends 'base.html.twig' %}

{% block title %}{{product.name}} - La Boutique Française{% endblock %}

{% block content %}

    <a href="{{path('app_products')}}">Retour à la boutique</a>

    <div class="row">

        <div class="col-md-5">
            <img src="/uploads/images/{{product.illustration}}" alt="{{product.subtitle}}" class="img-fluid">
        </div>

        <div class="col-md-7 my-auto">
                
                <h3>{{product.name}}</h3>
                <p class="product-subtitle">{{product.subtitle}}</p>
                <p class="product-price">{{(product.price / 100) | number_format(2, ',', '.')}} €</p>
                <hr>
                <p>{{product.description}}</p>
                <hr>
                <a href="#" class="btn btn-primary">Ajouter au panier</a>
            </div>
        </div>

    </div>

{% endblock %}