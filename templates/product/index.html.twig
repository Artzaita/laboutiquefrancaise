{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique Française{% endblock %}

{% block content %}
    <h1 class="text-center">Nos Produits</h1>

    <div class="row">
        <div class="col-md-3">
            <h4>Filtrer</h4>
            {{form(form)}}
        </div>

        <div class="row col-md-9 product-container">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="product-item text-center">
                        <a href="{{path('app_product', {'slug':product.slug})}}">
                        <img src="/uploads/images/{{product.illustration}}" alt="{{product.subtitle}}" class="img-fluid">
                        <h5>{{product.name}}</h5>
                        <span class="product-subtitle">{{product.subtitle}}</span>
                        <span class="product-price">{{(product.price / 100) | number_format(2, ',', '.')}} €</span>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>



{% endblock %}
